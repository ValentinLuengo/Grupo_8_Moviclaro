<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs', { title: "Tienda"}) %>

    <body>
        <%- include('../partials/header.ejs') %>
            <main>
                <h1>Listado de Productos</h1>
                <div class="main">
                    <div class="section-lateral">
                        <!-- Barra lateral -->
                        <!-- <br> prueba-->
                        <section class="conteinerPrincipal">
                            <section class="conteinerFiltros">
                                <h2>Filtros</h2>
                                <h3>Marcas</h3>
                                <section class="items">
                                    <div class="item"><input type="checkbox" value="">Motorola</div>
                                    <div class="item"><input type="checkbox" value="">Samsung</div>
                                    <div class="item"><input type="checkbox" value="">Apple</div>
                                </section>
                                <h3>Sist. Operativo</h3>
                                <section class="items">
                                    <div class="item"><input type="checkbox" value="">IOS</div>
                                    <div class="item"><input type="checkbox" value="">Androi</div>
                                    <div class="item"><input type="checkbox" value="">Windows</div>
                                </section>
                                <h3>Precio</h3>
                                <div>Desde<input class="itemPrecio" type="input" value=""></div>
                                <div>Hasta<input class="itemPrecio" type="input" value=""></div>
                                <input class="botonFiltrar" type="button" value="Filtrar">
                            </section>
                            <!-- Fin de barra lateral -->
                    </div>
                    <div class="main-container">
                        <!-- Contenido principal -->
                        <section class="conteiner">
                            <!-- Inicio articulo -->
                            <% product.forEach(product => { %>
                                <article class="articulo">
                                    <form action="/agregarCarrito" method="GET">
                                        <div class="img-container">
                                            <a href="/detalle/<%= product.id %>">
                                            <img class="imagenArticulo" src="/images/products/<%= product.image ? product.image : 'motog20-breeze-blue_front.png' %> " alt="logo">
                                            </a>
                                        </div>
                                        <div class="articulo-desc">
                                            <h3>
                                                <%= product.brands.name %>
                                            </h3>
                                            <h3>
                                                <%= product.model %>
                                            </h3>
                                            <p>
                                                <%if(product.product_categories.name == "Ofertas"){%>
                                                    Oferta
                                                <%}else if(product.product_categories.name == "Promociones"){%>
                                                    Promoci√≥n
                                                <%}%>
                                            </p>
                                            <p>
                                                <%= product.color_id.name %>
                                            </p>
                                            <p>
                                                $
                                                <%= product.price %>
                                            </p>
                                            <a href="/detalle/<%= product.id %>">
                                                <p>Ver detalle</p>
                                            </a>
                                            <input class="botonComprar" value="Comprar" type="submit" href="./agregarCarrito">
                                        </div>
                                    </form>
                                </article>
                                <% }); %>
                        </section>
                        <!-- Fin de contenido principal -->
                        </section>
                    </div>
                </div>
            </main>
            <%- include('../partials/footer.ejs') %>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    </body>

</html>