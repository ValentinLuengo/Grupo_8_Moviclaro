<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head.ejs', { title: "Editar"}) %>


    <body>
        <%- include('../partials/header.ejs') %>
            <main>
                <div class="main-register-login">
                    <h2 class="titulo-registro">Editar la cuenta</h2>
                    <form action="/user/<%= user.id %>?_method=PUT" method="POST" enctype="multipart/form-data" class="formulario" id="formEdit">
                        <div class="registro-formulario">
                            <div class="registro-campos registro_name">
                                <label for="name">Nombre</label>
                                <!-- <input type="text" name="name" id="name" class="input <%= locals.errors && errors.name ? 'is-invalid': null %>"  placeholder="<%= user.name %>" > -->
                                <input type="text" name="name" id="name" class="input" value="<%= user.name ? user.name : locals.old && old.name %>" required>
                                <% if (locals.errors && errors.name) { %>
                                    <div class="text-danger" >
                                        <%= errors.name.msg %>
                                    </div>
                                    <% } %>
                                    <div class="text-danger" id="errNombre">

                                    </div>
                            </div>

                            <div class="registro-campos registro_last_name">
                                <label for="last_name">Apellido</label>
                                <input type="text" name="last_name" id="last_name" class="input  <%= locals.errors && errors.last_name ? 'is-invalid': null %>" value="<%= user.last_name %>">
                                <% if (locals.errors && errors.last_name) { %>
                                    <div class="text-danger" >
                                        <%= errors.last_name.msg %>
                                    </div>
                                    <% } %>
                                    <div class="text-danger" id="errApellido">

                                    </div>
                            </div>
                            <div class="registro-campos registro_phone">
                                <label for="phone">Celular</label>
                                <input type="number" name="phone" id="phone" class="input  <%= locals.errors && errors.phone ? 'is-invalid': null %>" value="<%= user.phone %>">
                                <% if (locals.errors && errors.phone) { %>
                                    <div class="text-danger">
                                        <%= errors.phone.msg %>
                                    </div>
                                    <% } %>
                                    <div class="text-danger" id="errCelular">

                                    </div>
                            </div>

                            <div class="registro-campos registro_email">
                                <label for="email">E-mail</label>
                                <input type="email" name="email" id="email" class="input  <%= locals.errors && errors.email ? 'is-invalid': null %>" value="<%= user.email %>">
                                <% if (locals.errors && errors.email) { %>
                                    <div class="text-danger">
                                        <%= errors.email.msg %>
                                    </div>
                                    <% } %>
                                    <div class="text-danger" id="errEmail">

                                    </div>
                            </div>

                            <div class="registro-campos registro_password">
                                <label for="password">Contraseña</label>
                                <input type="password" name="password" id="password" class="input  <%= locals.errors && errors.password ? 'is-invalid': null %>" value="">
                                <% if (locals.errors && errors.password) { %>
                                    <div class="text-danger" >
                                        <%= errors.password.msg %>
                                    </div>
                                    <% } %>
                                    <div class="text-danger" id="errPassword">

                                    </div>
                            </div>


                            <div class="registro-campos registro_country_id">
                                <label>País</label>
                                <select name="country_id" id="country_id" class="input ">
                                    <% for (let i=0; i < country.length; i++){ %>
                                        <% if (country[i].id == user.country_id){%>
                                            <option value="<%=country[i].id%>" selected>
                                                <%=country[i].name%>
                                            </option>
                                    <%} else{%>
                                        <option value="<%=country[i].id%>">
                                            <%=country[i].name%>
                                        </option>
                                    <% } %>
                                        <% } %>
                                </select>


                                <% if (locals.errors && errors.pais) { %>
                                    <div class="text-danger">
                                        <%= errors.country_id.msg %>
                                    </div>
                                    <% } %>
                            </div>

                            <div class="registro-campos registro_password2">
                                <label for="password">Confirmar contraseña</label>
                                <input type="password" name="password2" id="password2" class="input  <%= locals.errors && errors.password2 ? 'is-invalid': null %>" value="">
                                <% if (locals.errors && errors.password2) { %>
                                    <div class="text-danger">
                                        <%= errors.password2.msg %>

                                    </div>
                                    <% } %>
                                    <div class="text-danger" id="errPassword2">

                                    </div>
                            </div>

                            <!-- <div class="registro-campos">
                                <label>Categoría</label>
                                <select name="categoria" class="input select">
                                    <option value="null" >Seleciona...</option>
                                    <option value="arg">Administrador</option>
                                    <option value="uru">Cliente</option>
                                </select>
                            </div> -->
                            <div class="registro-campos registro_image">
        <label for="image">Imagen de perfil</label> </br>
        <figure class="figure">
            <img src="/images/avatars/<%= user.image %>" alt="imagen de usuario">
        </figure>
        <input type="hidden" name="oldImage" value="<%= user.image%>">
        <input 
            type="file" 
            name="image" 
            id="image" 
            class=" <%= locals.errors && errors.image ? 'is-invalid': null %>" 
            value="<%= user.image%>">

        <% if (locals.errors && errors.image) { %>
            <div class="text-danger" >
                <%= errors.image.msg %>
            </div>
            <% } %>
            <div class="text-danger" id="errImage"></div>
    </div>

                        </div>
                        <div class="botones">
                            <button type="reset" class="registro-boton btnReset">BORRAR</button>
                            <button type="submit" id="submit" class="registro-boton btnSubmit">ENVIAR</button>
                        </div>

                    </form>
                </div>

            </main>
            <%- include('../partials/footer.ejs') %>
            <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.3.3/dist/sweetalert2.all.min.js"></script>
            <script src="../js/editarUsuarioValidation.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    </body>

</html>