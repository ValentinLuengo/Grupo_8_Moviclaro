<html lang="en">

<%- include('../partials/head.ejs', { title: "Perfil"}) %>

    <body>
        <%- include('../partials/header.ejs') %>
            <main>
                <h1>Hola
                    <%= user.name %>
                </h1>
                <section class="celular">
                    <img id=celular src="/images/avatars/<%= user.image %>">
                    <div class="texto-botones-desc">
                        <div class="Info">
                            <h2>
                                <%= user.name %>
                                    <%= user.last_name %>
                            </h2>
                            <p>
                                <%= user.email %>
                            </p>
                            <p>
                                <%= user.phone %>
                            </p>
                        </div>
                        <div class="descripcion">
                            <h3>
                                <%= user.countries.name %>
                            </h3>
                        </div>
                        <form action="/user/<%= user.id %>?_method=DELETE" method="POST">
                            <button type="submit" class="registro-boton registro-boton-red">ELIMINAR</button>
                        </form>
                        <form action="/user/<%= user.id %>" enctype="multipart/form-data" method="get">
                            <!-- <button type="button" class="registro-boton" href="/products/productEdit">EDITAR</button> -->
                            <input class="registro-boton" value="EDITAR" type="submit" href="#">

                        </form>
                    </div>
                </section>

            </main>
            <%- include('../partials/footer.ejs') %>
    </body>

</html>