<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head.ejs', { title: "Registrate"}) %>

    <body>
        <%- include('../partials/header.ejs') %>
            <main>
                <div class="main-register-login">
                    <h2 class="titulo-registro">Crear cuenta</h2>

                    <form action="/registro" method="POST" enctype="multipart/form-data" class="formulario">
                        <div class="registro-formulario">
                            <div class="registro-campos">
                                <label for="nombre">Nombre</label>
                                <input type="text" name="nombre" id="nombre" class="input">
                                <% if (locals.errors && errors.nombre) { %>
                                    <div class="text-danger">
                                        <%= errors.nombre.msg %>
                                    </div>
                                    <% } %>
                            </div>

                            <div class="registro-campos">
                                <label for="apellido">Apellido</label>
                                <input type="text" name="apellido" id="apellido" class="input">
                                <% if (locals.errors && errors.apellido) { %>
                                    <div class="text-danger">
                                        <%= errors.apellido.msg %>
                                    </div>
                                    <% } %>
                            </div>
                            <div class="registro-campos">
                                <label for="celular">Celular</label>
                                <input type="number" name="celular" id="celular" class="input">
                                <% if (locals.errors && errors.celular) { %>
                                    <div class="text-danger">
                                        <%= errors.celular.msg %>
                                    </div>
                                    <% } %>
                            </div>

                            <div class="registro-campos">
                                <label for="email">E-email</label>
                                <input type="eemail" name="email" id="email" class="input">
                                <% if (locals.errors && errors.email) { %>
                                    <div class="text-danger">
                                        <%= errors.email.msg %>
                                    </div>
                                    <% } %>
                            </div>

                            <div class="registro-campos">
                                <label for="password">Contraseña</label>
                                <input type="password" name="password" id="password" class="input">
                                <% if (locals.errors && errors.password) { %>
                                    <div class="text-danger">
                                        <%= errors.password.msg %>
                                    </div>
                                    <% } %>
                            </div>


                            <div class="registro-campos">
                                <label>País</label>
                                <select name="pais" class="input select">
                                    <option value="null" >Selecciona...</option>

                                    <% let paises = ['Argentina', 'Uruguay', 'España', 'México', 'Chile', 'Guatemala', 'Honduras', 'El Salvador', 'Venezuela', 'Colombia', 'Bolivia', 'Perú', 'Ecuador', 'Paraguay']; %> 

                                    <% for (const pais of paises){  %> 
                                    
                                    <option value="<%= pais %> "> <%= pais %> </option>

                                    <% } %> 
                                </select>
                                <% if (locals.errors && errors.pais) { %>
                                    <div class="text-danger">
                                        <%= errors.pais.msg %>
                                    </div>
                                    <% } %>
                            </div>

                            <div class="registro-campos">
                                <label for="password">Confirmar contraseña</label>
                                <input type="password" name="password2" id="password2" class="input">
                                <% if (locals.errors && errors.password2) { %>
                                    <div class="text-danger">
                                        <%= errors.password2.msg %>
                                    </div>
                                    <% } %>
                            </div>

                            <div class="registro-campos">
                                <label>Categoría</label>
                                <select name="categoria" class="input select">
                                    <option value="null" >Seleciona...</option>
                                    <option value="arg">Administrador</option>
                                    <option value="uru">Cliente</option>
                                </select>
                            </div>
                            <div class="registro-campos">
                                <label for="avatar">Imagen de perfil</label> </br>
                                <input type="file" name="avatar" id="avatar">
                                <% if (locals.errors && errors.avatar) { %>
                                    <div class="text-danger">
                                        <%= errors.avatar.msg %>
                                    </div>
                                    <% } %>
                            </div>

                        </div>
                        <div class="check">
                            <input type="checkbox" name="terminos" id="terminos">
                            <label for="terminos">He leído y acepto los términos y condiciones.</label>
                            <div class="text-danger"></div>
                        </div>
                        <div class="botones">
                            <button type="reset" class="registro-boton">BORRAR</button>
                            <button type="submit" class="registro-boton">ENVIAR</button>
                        </div>

                    </form>
                </div>

            </main>
            <%- include('../partials/footer.ejs') %>

    </body>

</html>